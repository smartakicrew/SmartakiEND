<script>
  let carouselPosition = {};

  function slideLeft(carouselId) {
    const carousel = document.getElementById(carouselId);
    if (!carouselPosition[carouselId]) carouselPosition[carouselId] = 0;
    carouselPosition[carouselId]++;
    if (carouselPosition[carouselId] > 2) carouselPosition[carouselId] = 0;
    carousel.style.transform = `translateX(-${carouselPosition[carouselId] * 100}%)`;
  }

  function slideRight(carouselId) {
    const carousel = document.getElementById(carouselId);
    if (!carouselPosition[carouselId]) carouselPosition[carouselId] = 0;
    carouselPosition[carouselId]--;
    if (carouselPosition[carouselId] < 0) carouselPosition[carouselId] = 2;
    carousel.style.transform = `translateX(-${carouselPosition[carouselId] * 100}%)`;
  }

  function addToCart(productName, price) {
