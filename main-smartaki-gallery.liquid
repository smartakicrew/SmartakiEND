<style>
  .smartaki-gallery-wrapper {
    font-family: 'Montserrat', Arial, sans-serif;
    background-color: #000;
    margin: 0;
    color: #eee;
    padding-bottom: 40px;
  }

  .smartaki-gallery-wrapper h1 {
    text-align: center;
    margin-top: 36px;
    color: #ff2e4a;
    font-size: 2.2rem;
    letter-spacing: 1.5px;
    text-shadow: 0 0 10px #d90429;
  }

  .smartaki-gallery-wrapper .gallery {
    max-width: 1150px;
    margin: 42px auto 40px auto;
    display: flex;
    flex-wrap: wrap;
    gap: 27px 18px;
    justify-content: center;
  }

  .smartaki-gallery-wrapper .gallery img {
    width: 265px;
    height: 180px;
    object-fit: contain;
    border-radius: 16px;
    box-shadow: 0 4px 17px #d90429cc;
    border: 3px solid #d90429;
    background: #111;
    transition: transform 0.22s, box-shadow 0.22s;
    cursor: pointer;
  }

  .smartaki-gallery-wrapper .gallery img:hover {
    border-color: #ff2e4a;
    box-shadow: 0 8px 33px #ff2e4acc;
    transform: scale(1.045);
  }

  @media (max-width: 600px) {
    .smartaki-gallery-wrapper .gallery img {
      width: 90%;
      height: auto;
    }
  }
</style>

